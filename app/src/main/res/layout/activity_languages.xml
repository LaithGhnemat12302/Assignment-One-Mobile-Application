<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/verticalLayoutsThirdScreen"
    android:background="#e9f229"
    tools:context=".Languages"
    >

    <ImageView
        style="@style/imageViewsStyleThirdScreen"
        android:id="@+id/languageImage"
        />

    <TextView
        style="@style/largeTextViewStyle"
        android:text="@string/languages"
        />

    <ListView
        style="listViewStyleThirdScreen"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listView"
        android:choiceMode="multipleChoice"
        />

    <LinearLayout
        style="@style/horizontalLayouts"
        >

        <Button
            style="@style/buttonsStyle"
            android:onClick="btnOnClickSave"
            android:text="@string/save_language"
            android:backgroundTint="#06d11e"
            />

        <Button
            style="@style/buttonsStyle"
            android:onClick="btnOnClickLoad"
            android:text="@string/load_language"
            android:backgroundTint="#06d11e"
            />

        <Button
            style="@style/buttonsStyle"
            android:onClick="btnOnClickInsert"
            android:text="@string/add_language"
            android:backgroundTint="#06d11e"
            />

        <Button
            style="@style/buttonsStyle"
            android:onClick="btnOnClickDelete"
            android:text="@string/delete_language"
            android:backgroundTint="#06d11e"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/horizontalLayouts"
        >

        <TextView
            style="@style/smallTextViewStyle"
            android:text="@string/enter_language"
            />

        <EditText
            style="@style/editTextStyle"
            android:hint="@string/hint_language"
            android:id="@+id/txtLanguage"
            />
    </LinearLayout>

</LinearLayout>